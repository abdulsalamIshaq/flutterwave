{
    "name": "kayode-suc/flutterwave",
    "description": "A simple Object Oriented PHP Client for Flutterwave API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Abdulsalam Ishaq",
            "email": "abdulsalamkayodeishaq@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1",
        "guzzlehttp/guzzle": "~6|~7"
    },
    "scripts": {
        "tests": "vendor/bin/phpunit"
    },
    "autoload": {
        "psr-4": {
            "KayodeSuc\\Flutterwave\\": "src/"
        }
    },
    "autoload-dev": {
         "psr-4": {
             "KayodeSuc\\Flutterwave\\Tests\\": "tests/"
         }
     },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpro/grumphp": "^1.3",
        "mockery/mockery": "^1.4",
        "spatie/global-ray": "^1.0"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp": false
        }
    }
}
